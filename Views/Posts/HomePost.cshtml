@model projetoRedeSocial.Models.Post

@{
    ViewData["Title"] = "Details";
}

<div class="row align-items-center" tabindex="0">
    <div class="col row align-items-center">
        @if (ViewBag.userId == Model.usuarioPost?.usuarioId)
        {
            <a asp-controller="Usuario" asp-action="DetailsUser" asp-route-id="@Model.usuarioPost?.usuarioId">
                @if (Model.usuarioPost?.usuarioImagem != null)
                {
                    <img src="@Url.Content(Model.usuarioPost.usuarioImagem)" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;" />
                }
                else
                {
                    <i class="fs-1 bi bi-person-circle img-fluid rounded-img" style="color:white"></i>
                }
                <span class="fs-4 ms-3 d-none d-sm-inline h1">@Model.usuarioPost?.usuarioNome</span>
            </a>
        }
        else
        {
            <a asp-controller="Usuario" asp-action="Details" asp-route-id="@Model.usuarioPost?.usuarioId">
                @if (Model.usuarioPost?.usuarioImagem != null)
                {
                    <img src="@Url.Content(Model.usuarioPost.usuarioImagem)" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;" />
                }
                else
                {
                    <i class="fs-1 bi bi-person-circle img-fluid rounded-img" style="color:white"></i>
                }
                <span class="fs-4 ms-3 d-none d-sm-inline h1">@Model.usuarioPost?.usuarioNome</span>
            </a>
        }
    </div>

    <div class="col d-flex align-items-center justify-content-end">
        @if (ViewBag.userId == Model.usuarioPost?.usuarioId)
        {
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-gear"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                    <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.postId">Editar</a></li>
                    <li>
                        <button type="button" class="dropdown-item btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            Excluir
                        </button>
                    </li>
                </ul>
            </div>
        }

        @if (ViewBag.Curtida)
        {
            <form asp-controller="Posts" asp-action="Descurtir" method="post" style="display:inline;">
                <input type="hidden" name="id" value="@Model.postId" />
                <button type="submit" class="btn btn-danger" style="border-radius:100%"><i class="bi bi-hand-thumbs-down-fill"></i></button>
            </form>
        }
        else
        {
            <form asp-controller="Posts" asp-action="Curtir" method="post" style="display:inline;">
                <input type="hidden" name="id" value="@Model.postId" />
                <button type="submit" class="btn btn-primary" style="border-radius:100%"><i class="bi bi-hand-thumbs-up-fill"></i></button>
            </form>
        }
        <span class="ms-3">@ViewBag.CurtidasCount curtidas</span> <!-- Exiba a quantidade de curtidas -->
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Excluir Post</h5>
            </div>
            <div class="modal-body">
                Ao excluir esse post, não poderá mais vê-lo novamente. Deseja continuar?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Voltar</button>
                <form asp-action="Delete" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@Model.postId" />
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.postArquivo))
{
    <div class="row d-flex justify-content-center align-items-center">
        <hr />
        <div class="col-6 d-flex justify-content-center flex-column text-center">
            <p class="h3">@Html.DisplayFor(model => model.postTitulo)</p>
            <div class="h4" style="overflow-y: scroll; height: 400px;">
                @Html.DisplayFor(model => model.postDesc)
            </div>
        </div>
        <div class="col d-flex justify-content-center h-100">
            @if (!Model.postArquivo.Contains(".mp4"))
            {
                <img src="@Url.Content(Model.postArquivo)" class="h-75 w-75" style="width:400px; object-fit:contain; border-radius:30px" />
            }
            else
            {
                <video src="@Url.Content(Model.postArquivo)" class="h-75 w-75" style="width:400px; object-fit:contain; border-radius:30px">
                    Your browser does not support the video tag.
                </video>
            }
        </div>
    </div>
    <hr />
}
else
{
    <div class="row d-flex justify-content-lg-around align-items-center text-white">
        <hr />
        <div class="col-10 d-flex justify-content-center flex-column text-center">
            <p class="h3">@Html.DisplayFor(model => model.postTitulo)</p>
            <div class="h4">
                @Html.DisplayFor(model => model.postDesc)
            </div>
        </div>
    </div>
    <hr />
}

<form asp-action="AdicionarComentario" method="post">
    <input type="hidden" name="postId" value="@Model.postId" />
    <div class="form-group">
        <label for="comentario">Adicionar Comentário:</label>
        <textarea class="form-control" id="comentario" name="comentario" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar Comentário</button>
</form>

@if (ViewData["Comentarios"] != null && ((List<Comentarios>)ViewData["Comentarios"]).Any())
{
    <hr />
    <h4>Comentários:</h4>
    @foreach (var comentario in (List<Comentarios>)ViewData["Comentarios"])
    {
        <div class="card  bg-dark text-white">
            <div class="card-body">
                <div class="row align-items-center" tabindex="0">
                    <div class="col row align-items-center">
                        <a asp-controller="Usuario" asp-action="Details" asp-route-id="@comentario.usuarioComentario.usuarioId">
                            @if (comentario.usuarioComentario?.usuarioImagem != null)
                            {
                                <img src="@Url.Content(comentario.usuarioComentario.usuarioImagem)" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                            }
                            else
                            {
                                <i class="fs-1 bi bi-person-circle img-fluid rounded-img" style="color:white"></i>
                            }
                            <span class="fs-6 ms-3 d-none d-sm-inline">@comentario.usuarioComentario?.usuarioNome</span>
                        </a>
                    </div>
                </div>
                <hr />
                <p class="card-text">@comentario.comentario</p>
            </div>
        </div>
    }
}
