@model IEnumerable<projetoRedeSocial.Models.Comentarios>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.usuarioComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.postComentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comentario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.usuarioComentario.usuarioId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postComentario.postId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.comentarioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.comentarioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.comentarioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
